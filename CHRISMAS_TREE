# include <stdio.h>
int main()
{   int i,j,k;
    for(int i=1;i<=7;i++)
    {
        for(int k=i;k<=6;k++)
        {
             printf(" ");
        }
    for(int j=1;j<=i;j++)
    {
        printf("* ");
    }
    printf("\n");
}

 for(int i=3;i<=7;i++)
    {
        for(int k=i;k<=6;k++)
        {
             printf(" ");
        }
    for(int j=1;j<=i;j++)
    {
        printf("* ");
    }
    printf("\n");
}

 for(int i=4;i<=7;i++)
    {
        for(int k=i;k<=6;k++)
        {
             printf(" ");
        }
    for(int j=1;j<=i;j++)
    {
        printf("* ");
    }
    printf("\n");
}
for(i=1;i<=7;i++)
{
    for(int k=1;k<=4;k++)
        {
             printf(" ");
        }
    for(j=1;j<=3;j++)
    {
        printf("|");
    }
    printf("\n");
}
}

